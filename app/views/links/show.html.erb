<div class="page-header">
	<h1><a href="<%= @link.url %>"><%= @link.title %></a><br> <small>Submitted by <%= @link.user.eamil %></small>
	</h1>
</div>

<div class="btn-group">
	<%= link_to 'Visit URL', @link.url, class: "btn btn-primary" %>
</div>

<% if @link.user == current_user %>
	<div class="btn-group">
		<%= link_to 'Edit', edit_link_path(@link), class: "btn btn-defalt" %>
		<%= link_to 'Destroy', @link, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-defalt" %>		
	</div>
	<% end %>