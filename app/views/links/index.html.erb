<% @links.each do |link| %>
  <div class="link row clearfix">
    <h2>
      <%= link_to link.title, link %><br>
      <email class="author">Submitted <%= time_ago_in_words(link.created_at) %> by <%= link.user.email %></email>
    </h2>

    <div class="btn-group">
       <a class="btn btn-defalt btn-sm" href="<%= link.url %>">Visit Link</a>	
	     <%= link_to like_link_path(link), method: :put, class: "btn btn-defalt btn-sm" do %>
	     	<span class="glyphicon glyphicon-chevron-up"></span>
	      Upvote
	      <%= link.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_link_path(link), method: :put, class: "btn btn-defalt btn-sm" do %>
	      <span class="glyphicon glyphicon-chevron-down"></span>
	      Downvote
	      <%= link.get_downvotes.size %>
      <% end %>
  </div>
</div>
<% end %>